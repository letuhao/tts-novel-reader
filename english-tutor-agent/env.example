# Environment Configuration Example
# Copy this file to .env and update with your values

# Environment
ENV=development
LOG_LEVEL=INFO

# Database Configuration (PostgreSQL)
POSTGRES_DB=english_tutor_agent
POSTGRES_USER=english_tutor_agent
POSTGRES_PASSWORD=english_tutor_agent_password
POSTGRES_PORT=5434
DATABASE_URL=postgresql://english_tutor_agent:english_tutor_agent_password@localhost:5434/english_tutor_agent

# Alternative: Use existing database (if shared)
# DATABASE_URL=postgresql://english_tutor:english_tutor_password@localhost:5432/english_tutor

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:12b

# TTS/STT Services
TTS_BACKEND_URL=http://localhost:11111
STT_BACKEND_URL=http://localhost:11210

# API Configuration
API_HOST=0.0.0.0
API_PORT=11300

# Integration with existing English Tutor App
EXISTING_API_URL=http://localhost:11200

# LangGraph Configuration
LANGGRAPH_CHECKPOINT_NAMESPACE=english_tutor_agent
LANGGRAPH_DEBUG=false

# Checkpointer Configuration (enterprise)
# - auto: prefer Redis if REDIS_URL set, otherwise Postgres if available, otherwise in-memory
# - redis: force Redis-backed checkpointer (recommended for async workflows)
# - postgres: force PostgresSaver (sync-only unless async saver is available)
# - memory: force in-memory (dev only)
CHECKPOINTER_BACKEND=redis
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380/0

# Router Configuration
ROUTER_MODE=hybrid
# Options: "keyword" (fast, keyword-based), "llm" (accurate, LLM-based), "hybrid" (fast + accurate)

# Optional: LangSmith (for tracing)
# LANGSMITH_API_KEY=your_langsmith_api_key
# LANGSMITH_PROJECT=english-tutor-agent
# LANGSMITH_TRACING=true

