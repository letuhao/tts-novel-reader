{
  "name": "novel-reader-backend",
  "version": "1.0.0",
  "description": "Novel Reader Backend - Node.js microservice",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "clean:db": "node scripts/clean_all.js",
    "clean:storage": "node scripts/clean_storage.js",
    "clean:all": "node scripts/clean_all.js && node scripts/clean_storage.js",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "node --test",
    "start:silent": "python start_backend.py",
    "stop:silent": "python stop_backend.py"
  },
  "keywords": [
    "novel",
    "reader",
    "tts",
    "audio"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "better-sqlite3": "^11.3.0",
    "axios": "^1.6.2",
    "uuid": "^9.0.1",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
